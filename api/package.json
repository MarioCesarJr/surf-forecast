  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/index.ts | pino-pretty -c",
    "test": "yarn test:unit && yarn test:functional",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "test:unit": "jest",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.11.11",
    "@types/pino": "^6.3.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "jest": "^26.6.0",
    "nock": "^13.0.4",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.11",
    "pino": "^6.7.0"
  }
}
